<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Name: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name_txtview"
        android:padding="4dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/phone_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_txtview"
        android:padding="4dp"
        android:text="Phone No.: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phone_txtview"
        android:layout_below="@id/contact_name"
        android:padding="4dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_txtview"
        android:paddingTop="4dp"
        android:text="Email: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contact_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/email_txtview"
        android:layout_below="@id/contact_phone"
        android:paddingTop="4dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/email_txtview"
        style="?android:listSeparatorTextViewStyle"/>
</RelativeLayout>